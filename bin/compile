#!/bin/bash


indent() {
  sed -u 's/^/       /'
}

echo "-----> Found a .vendor_urls file"

# Bail early but noisily
if [ ! -s $1/.vendor_urls ]; then
  echo ".vendor_urls empty. Skipping." | indent
  exit 0
fi


mkdir -p $1/vendor

while read url; do
  echo Vendoring $url | indent
  curl $url -o - | tar -xz -C $1/vendor -f -
done < $1/.vendor_urls  
